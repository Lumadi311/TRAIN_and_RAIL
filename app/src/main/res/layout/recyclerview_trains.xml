<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/trainImage"
                android:layout_width="132dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/trainevent" />

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_trainName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suva Travels"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/text_view_trainNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Train Number: BHE 9870"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: 12/12/2021"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/text_view_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From: Nairobi"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/text_view_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To: Mombasa"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/text_view_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Train Condition: A/C Sleepers"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>