<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trainrail" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />



    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@drawable/trainraillogorevised"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TRAINRAIL" >

        <activity android:name=".NavigationActivity"></activity>
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".ConfirmActivity"></activity>
        <activity android:name=".CreditActivity"></activity>
        <activity android:name=".LocationActivity"></activity>
        <activity android:name=".FinishActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".TrainActivity"></activity>
        <activity android:name=".SeatActivity"></activity>
        <activity android:name=".PointActivity"></activity>
        <activity android:name=".NotificationActivity"></activity>
        <activity android:name=".PayableActivity"></activity>
        <activity android:name=".PayActivity"></activity>


        <activity android:name=".SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OfferActivity"
            android:parentActivityName=".NavigationActivity"></activity>
        <activity android:name=".EventActivity"
            android:parentActivityName=".NavigationActivity"></activity>
        <activity android:name=".ContactActivity"
            android:parentActivityName=".NavigationActivity"></activity>
        <activity android:name=".HelpActivity"
            android:parentActivityName=".NavigationActivity"></activity>
        <activity android:name=".DetailActivity"
            android:parentActivityName=".NavigationActivity"></activity>
        <activity android:name=".CancelActivity"
            android:parentActivityName=".NavigationActivity"></activity>
        <activity android:name=".SettingActivity"
            android:parentActivityName=".NavigationActivity"></activity>


    </application>

</manifest>